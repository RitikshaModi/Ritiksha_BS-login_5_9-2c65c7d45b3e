<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/weather_layout"
    tools:context=".ProfileInfo">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="50dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_firstname_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="First Name"
                android:textSize="17dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edt_firstname_profile"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:textSize="17dp"
                android:layout_marginLeft="10dp"
                android:textStyle="bold"
                android:textColor="#ffffff"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="100dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_lastname_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Last Name"
                android:textSize="17dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edt_lastname_profile"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:textSize="17dp"
                android:layout_marginLeft="12dp"
                android:textStyle="bold"
                android:textColor="#ffffff"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/linear_layout_email"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="150dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_email_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email"
                android:textSize="17dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edt_email_profile"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:textSize="17dp"
                android:layout_marginLeft="51dp"
                android:textStyle="bold"
                android:textColor="#ffffff"/>

        </LinearLayout>

    <Button
        android:id="@+id/btn_updateprofile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"
        android:layout_below="@+id/linear_layout_email"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:textSize="15dp"
        android:text="Update"/>

</RelativeLayout>